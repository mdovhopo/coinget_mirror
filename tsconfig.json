{
  "compilerOptions": {
    "outDir": "./",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2015",
    "jsx": "react",
    "allowJs": true,
    "typeRoots" : ["./src/typings"],
    "baseUrl": "./",
    "paths": {
      "Sr—Å/*":        ["./src/*"],
      "Components/*": ["./src/components/*"],
      "Assets/*":     ["./src/assets/*"],
      "Style/*":      ["./src/style/*"],
      "react/*":      ["./node_modules/react/*"],
      "Redux/*":      ["./src/redux/*"],
      "Utils/*":      ["./src/utils/*"],
      "Constants/*":  ["./src/constants/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
